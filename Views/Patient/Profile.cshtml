@model HastaneTakipsistemi.Models.ApplicationUser

@{
    ViewData["Title"] = "Hasta Profili";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    <h2>@Model.FirstName @Model.LastName</h2>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                    <p class="card-text"><strong>Yaş:</strong> @Model.Age</p>
                    <p class="card-text"><strong>Cinsiyet:</strong> @Model.Gender</p>
                    <p class="card-text"><strong>Kan Grubu:</strong> @Model.BloodType</p>
                    <p class="card-text"><strong>Alerjiler:</strong> @Model.Allergies</p>
                    <p class="card-text"><strong>Kronik Hastalıklar:</strong> @Model.ChronicDiseases</p>
                    <p class="card-text"><strong>Tıbbi Geçmiş:</strong> @Model.MedicalHistory</p>
                </div>
            </div>
        </div>
    </div>
</div>