@model PatientDetailsViewModel

<div class="container">
    <h2>Hasta Bilgileri</h2>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4>@Model.FirstName @Model.LastName Yaş: @Model.Age
                <h4 />
        </div>
        <div class="card-body">
            <form asp-action="UpdatePatientDetails" method="post">
                <input type="hidden" asp-for="PatientId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="BloodType" class="control-label"></label>
                            <select asp-for="BloodType" class="form-control">
                                <option value="">Seçiniz</option>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Allergies" class="control-label"></label>
                            <textarea asp-for="Allergies" class="form-control" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ChronicDiseases" class="control-label"></label>
                            <textarea asp-for="ChronicDiseases" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MedicalHistory" class="control-label"></label>
                            <textarea asp-for="MedicalHistory" class="form-control" rows="5"></textarea>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div>
        <a asp-action="DoctorAppointments" class="btn btn-secondary">Randevulara Geri Dön</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}