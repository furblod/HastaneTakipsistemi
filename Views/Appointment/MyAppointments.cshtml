<!-- Views/Appointment/MyAppointments.cshtml -->
@model IEnumerable<HastaneTakipsistemi.Models.Appointment>

<h2>Randevularım</h2>

<table class="table">
    <thead>
        <tr>
            <th>Doktor</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>Notlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Doctor.UserName</td>
                <td>@appointment.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@appointment.Status</td>
                <td>@appointment.Notes</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class ="btn btn-primary">Yeni Randevu Oluştur</a>    