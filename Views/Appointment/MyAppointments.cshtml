<!-- Views/Appointment/MyAppointments.cshtml -->
@model IEnumerable<HastaneTakipsistemi.Models.Appointment>

<h2>Randevularım</h2>

<table class="table">
    <thead>
        <tr>
            <th>Doktor</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>Notlar</th>
            <th>Tahlil Sonuçları</th>
            <th>Reçete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Doctor?.FirstName @appointment.Doctor?.LastName</td>
                <td>@appointment.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@appointment.Status</td>
                <td>@appointment.Notes</td>
                <td>
                    <a asp-controller="TestRequest" asp-action="MyTestRequests" asp-route-appointmentId="@appointment.Id"
                        class="btn btn-secondary btn-sm">Tahlil Sonuçları</a>
                </td>
                <td>
                    <a asp-controller="PrescriptionView" asp-action="MyPrescriptions"
                        asp-route-appointmentId="@appointment.Id">Reçeteyi Görüntüle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Randevu Oluştur</a>