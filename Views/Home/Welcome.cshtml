@using System.Security.Claims
@{
    Layout = "_Layout";
    ViewData["Title"] = "Hastanemize Hoş Geldiniz";
}

<div id="hospitalSlider" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#hospitalSlider" data-bs-slide-to="0" class="active" aria-current="true"
            aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#hospitalSlider" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#hospitalSlider" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/hospital-exterior.jpg" class="d-block w-100" alt="Hastane Dış Görünüm">
            <div class="carousel-caption d-none d-md-block">
                <h5>Modern Sağlık Hizmetleri</h5>
                <p>Güvenilir ve kaliteli sağlık hizmeti</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/hospital-interior.jpg" class="d-block w-100" alt="Hastane İç Mekan">
            <div class="carousel-caption d-none d-md-block">
                <h5>İleri Teknoloji Ekipmanlar</h5>
                <p>En son tıbbi teknolojilerle donatılmış servislerimiz</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/medical-team.jpg" class="d-block w-100" alt="Tıbbi Ekip">
            <div class="carousel-caption d-none d-md-block">
                <h5>Uzman Sağlık Ekibi</h5>
                <p>Alanında uzman doktorlarımızla hizmetinizdeyiz</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#hospitalSlider" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#hospitalSlider" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <h1 class="mb-4">Sağlık Hizmetlerinde Güven Adresine Hoş Geldiniz</h1>
            <p class="lead">
                Modern tıbbın imkânları ve insan odaklı yaklaşımımızla, sağlığınız için buradayız.
                Uzman kadromuz, ileri teknoloji ekipmanlarımız ve hasta memnuniyetine odaklı hizmet anlayışımızla
                sizlere en iyi sağlık hizmetini sunmayı amaçlıyoruz.
            </p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Hasta Kayıt</h5>
                    <p class="card-text">Hızlı ve kolay hasta kayıt sistemi ile randevu alabilirsiniz.</p>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Kayıt Ol</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Giriş Yap</h5>
                    <p class="card-text">Mevcut hesabınızla sisteme giriş yapabilirsiniz.</p>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success">Giriş Yap</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Hizmetlerimiz</h5>
                    <p class="card-text">Sunduğumuz tüm sağlık hizmetleri hakkında bilgi alın.</p>
                    <a href="#" class="btn btn-info">Detayları Gör</a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section Styles {
    <style>
        .welcome-container {
            background-color: #f4f6f9;
        }

        .carousel-item img {
            max-height: 500px;
            object-fit: cover;
        }

        .card {
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.05);
        }
    </style>
}