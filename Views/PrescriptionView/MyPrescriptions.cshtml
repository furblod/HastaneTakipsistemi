@model IEnumerable<HastaneTakipsistemi.Models.Prescription>

<div class="container-fluid px-4">
    <div class="row my-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="fas fa-calendar-check me-2"></i>Reçetelerim
                    </h3>
                    <span class="badge bg-light text-dark">Toplam Reçete: @Model.Count()</span>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Randevu Tarihi</th>
                            <th>İlaçlar</th>
                            <th>Kullanım</th>
                            <th>Notlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prescription in Model)
                        {
                            <tr>
                                <td>@prescription.Appointment?.AppointmentDate</td>
                                <td>@prescription.Medications</td>
                                <td>@prescription.Usage</td>
                                <td>@prescription.Notes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>